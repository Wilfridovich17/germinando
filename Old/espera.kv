<ScreenOne>:
	
    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20
		canvas:
			Color:
				rgba: 0,1,.3,.63
			Rectangle:
				size: self.size
				pos: self.pos		
		
        Label:
			markup: True
			id: label
			font_size : 50
            text: "[font=JennaSue]En cada semilla de esperanza...[/font]" 
            
            
        Label:
			markup: True
            id: label
            font_size : 50
            text: "[font=JennaSue]Una sonrisa que florece[/font]"

								
        Image:
            id: image
            size_hint: 2, 2
            size: 1, 1
            source:'macetas.gif'
            pos_hint:{'center_x': .5,'center_y': 1}


        Label:
            id: label
            text: "Cargando... " + str(root.health_points)
            color: .9,.7,.6,.3
        
    

            
<Manager>:
		
    id: screen_manager

    screen_one: screen_one

    ScreenOne:
        id: screen_one
        name: "screen1"
        manager: screen_manager
		



