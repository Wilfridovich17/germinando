#:kivy 1.0

<SelectableLabel>:
    # Draw a background to indicate selection
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: (.05, 0.5, .7, .8) if self.selected else (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
            
    Button:
        id:Guardar
        text: 'Guardar'
        on_press: root.button_selection()
    
   
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(36)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
        
