#:kivy 1.0
<ScreenOne>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Image:
            id: image
            size_hint: None, None
            size: 100, 100
            source:'logo-uaq-png-1.png'

        Label:
            id: label
            text: "Cargando... " + str(root.health_points)

<ScreenTwo>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20
        
        Image:
            id: image
            size_hint: None, None
            size: 100, 100
            source:'logo-uaq-png-1.png'

        Label:
            text: "Menú principal"
        Button:
            text: "Bases de datos"
            on_release:
                root.manager.current = "screen3"

        Button:
            text: "Análisis"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

        Button:
            text: "Salir"
            on_press: app.stop()

        Button:
            text: "FAQ"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

        Button:
            text: "Créditos"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

<ScreenThree>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Bases de datos"
        Button:
            text: "Revisión de fuentes"
            on_release:
                root.manager.current = "screen4"

        Button:
            text: "Actualizar fuentes"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

        Button:
            text: "Regresar"
            on_release:
                root.manager.current = "screen2"

        Button:
            text: "Salir"
            on_press: app.stop()

<ScreenFour>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Revisión de fuentes"

        Label:
            text: "Lista de fuentes encontradas:"

        Button:
            text: "Actualizar repositorio"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

        Button:
            text: "Revisar repositorio"
            on_release:
                root.manager.current = "screen2"
                # reset health_points
                root.manager.ids.screen_two.health_points = 100

        Button:
            text: "Regresar"
            on_release:
                root.manager.current = "screen3"

        Button:
            text: "Salir"
            on_press: app.stop()

<Manager>:
    id: screen_manager

    screen_one: screen_one
    screen_two: screen_two
    screen_three: screen_three
    screen_four: screen_four

    ScreenOne:
        id: screen_one
        name: "screen1"
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: "screen2"
        manager: screen_manager

    ScreenThree:
        id: screen_three
        name: "screen3"
        manager: screen_manager

    ScreenFour:
        id: screen_four
        name: "screen4"
        manager: screen_manager
