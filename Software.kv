<Test>:
    BoxLayout:
        padding: 50, 50, 50, 50
        orientation: 'vertical'
        the_text:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size  
        Label:
            text: 'Software'
            color: 0, 0, 0, 1
            font_size:'27sp'
            
        BoxLayout:
            spacing: 30
            orientation: 'vertical'
            size_hint_x: 0.40
            size: self.size  
            canvas:
                Color:
                    rgb: 1,1,1
            TextInput:
                hint_text: "ingresa aquí tu clave"
                width:100
                size_hint_x:None
                password:True
            Button:
                text: 'Validar'
                color: 0, 0, 0, 1
                background_color: (1, 1, 1, .2)
                font_size: self.width/10
                #on_press: root.manager.current = 'settings'
                size_hint_x:None
                width:100
                #on_press: root.clave()
                on_press: root.login()
<SettingsScreen>:
    BoxLayout:
        orientation:'horizontal'
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size  
        GridLayout:
            cols:1
            row_default_height:80
            BoxLayout:
                spacing: 20
                orientation: 'vertical'
                size_hint_x: 0.30
                size_hint_y: 0.30
                canvas:
                    Color:
                        rgb: 1,1,1
                Button:
                    text:"Scaner"
                    color: 0, 0, 0, 1
                    background_color: (1, 1, 1, .2)
                    size_hint_y: 0.25
                    size_hint_x:0.4
                    pos:(.3,.2)
                    font_size: self.width/8        
                Button:
                    text:"Generar mastér"
                    color: 0, 0, 0, 1
                    background_color: (1, 1, 1, .2)
                    size_hint_y: 0.25
                    size_hint_x:0.4
                    pos:(.3,.2)
                    font_size: self.width/8       
                Button:
                    text:"Generar graficas"
                    color: 0, 0, 0, 1
                    background_color: (1, 1, 1, .2)
                    size_hint_y: 0.25
                    size_hint_x:0.4
                    font_size: self.width/8
                Button:
                    text: 'Salir'
                    on_press: app.stop()
                    #on_press: root.manager.current = 'menu'
                    color: 0, 0, 0, 1
                    background_color: (1, 1, 1, .2)
                    size_hint_y: 0.25
                    size_hint_x:0.4
                    font_size: self.width/8
        GridLayout:
            cols:1
            orientation:'horizontal'
            Label:
                text: 'Fecha Inicio'
                color: 0, 0, 0, 1
